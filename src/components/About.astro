---
// src/components/About.astro
import BounceCards from './BounceCards.jsx';

// Daftar gambar yang akan ditampilkan
const images = [
    "/photography2.jpeg",
    "/the_beach.jpeg",
    "/jakarta.jpeg",
    "/personal_photo.jpeg"
];

// Gaya transformasi untuk setiap kartu
const transformStyles = [
    "rotate(6deg) translate(-180px)", 
    "rotate(-1deg) translate(-60px)",                 
    "rotate(5deg) translate(60px)",
    "rotate(-4deg) translate(180px)"

];
---
<section id="about" class="py-20 md:py-32 px-4 text-gray-800">
    <div class="max-w-screen-xl mx-auto flex flex-col items-center gap-16">

        <BounceCards
            client:visible
            images={images}
            transformStyles={transformStyles}
            containerWidth={500}
            containerHeight={250}
            animationDelay={0.5}
            animationStagger={0.1}
            easeType="elastic.out(1, 0.5)"

            cardWidth={220}
            cardHeight={280}
        />

        <div class="max-w-2xl w-full grid grid-cols-[auto,1fr] gap-x-8">
            <p class="text-gray-500">About me</p>
            <div class="text-gray-700 font-medium text-xl leading-relaxed space-y-6">
                <p>
                   Hi there!  Iâ€™m Akhdan, a designer that loves to build great products with delightful interfaces.
                </p>
                <p>
                    I love working in the realm between design and code. Some things that make me excited are Design Systems, Animation, and making interfaces feel fun and human. After taking a year off to focus on personal projects, I'm now looking for something exciting to work on.
                </p>
                <p>
                    I grew up in Bekasi just outside of Jakarta, Indonesia and come from a background of studying System Information. Outside of work I'm obsessed with photography and graphic design.
                </p>
            </div>
        </div>

    </div>
</section>