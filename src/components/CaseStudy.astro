                <p class="text-xs md:text-sm text-gray-500 mt-1 hidden md:block">Product Design</p>
              </div>
            </div>
          </div>
        </div>
      </AnimatedContent>

      <AnimatedContent
        client:visible
        distance={100}
        direction="vertical"
        reverse={false}
        duration={1}
        ease="power3.out"
        initialOpacity={0}
        animateOpacity
        scale={1}
        threshold={0.1}
        delay={0.2}
      >
        <div class="max-w-full w-full lg:w-5xl">
