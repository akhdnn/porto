---
import AnimatedContent from '../components/AnimatedContent.jsx';
---
<section id="work" class="py-20 md:py-32 px-4">
  <div class="max-w-screen-xl mx-auto flex flex-col gap-12">
    <AnimatedContent
      client:visible
      distance={100}
      direction="vertical"
      reverse={false}
      duration={0.5}
      ease="power3.out"
      initialOpacity={0}
      animateOpacity
      scale={1}
      threshold={0.2}
      delay={0.1}
    >
      <h2 class="text-center text-3xl md:text-4xl font-medium tracking-tight text-gray-900">
        Featured projects
      </h2>
    </AnimatedContent>

    <div class="flex flex-col gap-16 md:gap-24 lg:gap-32 w-full items-center">

      <AnimatedContent
        client:visible
        distance={100}
        direction="vertical"
        reverse={false}
        duration={1}
        ease="power3.out"
        initialOpacity={0}
        animateOpacity
        scale={1}
        threshold={0.1}
        delay={0.2}
      >
        <div class="max-w-full w-full lg:w-5xl">
          <a
            href="/sumbu"
