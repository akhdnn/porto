---
import AnimatedContent from '../components/AnimatedContent.jsx';
---

<section id="connect" class="py-20 px-4 text-black">
    <AnimatedContent
        client:visible
        distance={100}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power3.out"
        initialOpacity={0}
        animateOpacity
        scale={1}
        threshold={0.1}
        delay={0.2}
    >
    <div class="max-w-screen-xl mx-auto flex flex-col items-center gap-16">
        <h3 class="text-2xl font-medium text-gray-800">Letters sent to connect with me</h3>

        <div class="relative w-full h-80 flex justify-center items-center group">
            
            <div class="absolute w-full max-w-lg h-48 transition-transform duration-500 ease-out transform -rotate-5 group-hover:rotate-3 group-hover:scale-110">
                <img src="/postcard3.png" alt="postcard" class="w-full h-full object-cover rounded-2xl shadow-lg">
            </div>
            
        </div>

        <a href="mailto:hello@akhdan.space" class="mt-8 inline-flex items-center gap-2 bg-black text-white font-semibold px-5 py-3 rounded-full shadow-md hover:bg-zinc-800 transition-transform duration-300 hover:scale-105">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            <span>Write a letter</span>
        </a>
    </div>
    </AnimatedContent>
</section>